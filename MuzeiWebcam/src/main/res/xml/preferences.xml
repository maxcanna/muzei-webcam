<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:title="@string/preference_title_name"
        android:key="@string/preference_key_name"
        android:icon="@drawable/ic_action_tag"
        android:dialogTitle=""
        android:singleLine="true" />
    <EditTextPreference android:title="@string/preference_title_url"
        android:key="@string/preference_key_url"
        android:icon="@drawable/ic_action_link"
        android:dialogTitle=""
        android:singleLine="true"
        android:inputType="textWebEditText" />
    <CheckBoxPreference android:title="@string/preference_title_wifi_only"
        android:key="@string/preference_key_wifi_only"
        android:icon="@drawable/ic_action_wifi"
        android:defaultValue="false"
        android:summary="@string/preference_summary_wifi_only" />
    <CheckBoxPreference android:title="@string/preference_title_grab_url"
        android:key="@string/preference_key_grab_url"
        android:icon="@drawable/ic_action_share"
        android:summary="@string/preference_summary_grab_url"
        android:defaultValue="true" />
    <EditTextPreference android:title="@string/preference_title_interval"
        android:key="@string/preference_key_interval"
        android:icon="@drawable/ic_action_clock_white"
        android:dialogTitle=""
        android:singleLine="true"
        android:inputType="number"
        android:defaultValue="@string/source_default_interval"
        android:hint="@string/source_default_interval" />
</PreferenceScreen>